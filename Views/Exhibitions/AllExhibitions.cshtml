@model DSU21_2.ViewModels.AllExhibitionsViewModel
<main>
    <div class="grid-container">
        <h1>Alla Utställningar</h1>

        @for (int i = 0; i < 20; i++)
        {
            <div class="grid-art">
                 <img src="@Model.AllExhibitions[i].Artworks.FirstOrDefault().Hyperlink">
                     <a class="to-all-exhibitions" href="/Exhibitions/@i" @Model.AllExhibitions[i].Name>
                        <div class="info-box">
                              <h3 class="title">@Model.AllExhibitions[i].Name</h3>
                              <p class="info-text">@Model.AllExhibitions[i].Description</p>
                         </div>
                    </a>
             </div>

        }                    
     </div>
</main>
