@model DSU21_2.ViewModels.AllExhibitionsViewModel
<main>
    <h1 id="container-h1">Alla Utställningar</h1>
    <div class="grid-allexhibitions">

        @for (int i = 0; i < @Model.AllExhibitions.Count; i++)
        {
            <div class="grid-allexhibition">
                 <img src="@Model.AllExhibitions[i].Artworks.FirstOrDefault().Hyperlink">
                     <a class="to-all-exhibitions" href="/Exhibitions/@Model.AllExhibitions[i].Id">
                        <div class="info-allexhibitions">
                              <h1 class="title-allexhibitions">@Model.AllExhibitions[i].Name</h1>
                              <p class="text-allexhibitions">@Model.AllExhibitions[i].Description</p>
                         </div>
                    </a>
             </div>

        }                    
     </div>
</main>
