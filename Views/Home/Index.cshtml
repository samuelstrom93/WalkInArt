@model DSU21_2.ViewModels.HomeViewModel

<main>
    <div class="grid-container">
        <h1>Mest besökta</h1>

        @*Hårdkodad till fyra just nu för att fylla grid som består av fyra kolumner
        Behöver förstora griden för att elementen ska få plats horistontellt och
        sätta någon sorts begränsning på hur många element vi kan ladda in?*@
        @for (int i = 0; i < 4; i++)
        {
            <div class="grid-art">
                <img src="@Model.CurrentCollections[i].Artworks.FirstOrDefault().Hyperlink">
                <a class="to-exhibition" href="/Exhibitions/@Model.CurrentCollections[i].Id">

                    <div class="info-box">
                        <h3 class="title">@Model.CurrentCollections[i].Name</h3>
                        <p class="info-txt">@Model.CurrentCollections[i].Description </p>
                    </div>
                </a>
            </div>
        }
        <h1>Kategorier</h1>

        @for (int i = 0; i < 4; i++)
        {
            <div class="grid-art">
                <a class="chosen-category" href="/Categories/@Model.Categories[i].Title">
                    <img src="@Model.Categories[i].Collections.FirstOrDefault().Artworks.FirstOrDefault().Hyperlink" alt="">
                    <div class="category">
                        <p>@Model.Categories[i].Title</p>
                    </div>
                </a>
            </div>
        }
        <a href="Categories" alt="categories" class="all-categories">
            Visa alla kategorier
        </a>

        <h1>Kommande utställningar</h1>
        @for (int i = 0; i < 4; i++)
        {
            <div class="grid-art">
                <img src="@Model.IncomingCollections[i].Artworks.FirstOrDefault().Hyperlink">
                <a class="to-exhibition" href="/Exhibitions/@Model.IncomingCollections[i].Id">

                    <div class="info-box">
                        <h3 class="title">@Model.IncomingCollections[i].Name</h3>
                        <p class="info-txt">@Model.IncomingCollections[i].Description </p>
                    </div>
                </a>
            </div>
        }

    </div>
</main>

